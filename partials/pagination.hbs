<nav class="pagination" role="pagination">
    {{#if prevPage}}
        <a class="newer-posts" href="{{prevPage.url}}"><i class="fa fa-chevron-circle-left"></i> Newer</a>
    {{/if}}

    <span class="page-number">Page {{currentPage prevPage}} of {{contents.[last.page].pageNum}}</span>
    {{#if nextPage}}
        <a class="older-posts" href="{{nextPage.url}}">Older <i class="fa fa-chevron-circle-right"></i></a>
    {{/if}}
</nav>